{
  "name": "@mito-test/root",
  "version": "1.0.0",
  "description": "Mito Test Monorepo - Flight Search Application",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test-api": "./run-tests.sh",
    "clean": "npm run clean --workspaces",
    "backend:dev": "npm run dev --workspace=apps/backend",
    "frontend:dev": "npm run dev --workspace=apps/frontend"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

