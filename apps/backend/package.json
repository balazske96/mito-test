{
  "name": "backend",
  "version": "1.0.0",
  "description": "Simple Express.js API in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "4.21.2",
    "@mito-test/shared-types": "*"
  },
  "devDependencies": {
    "@types/express": "4.17.23",
    "ts-node-dev": "2.0.0"
  }
}
